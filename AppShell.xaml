<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MastodonMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MastodonMaui.Views"
    Shell.FlyoutBehavior="{OnIdiom Phone=Disabled, Default=Locked}"
    Shell.BackgroundColor="Transparent"
    Shell.NavBarIsVisible="False"
    FlyoutBackgroundColor="Transparent"
    BackgroundColor="Transparent">
    
    <FlyoutItem
        Title="Home"
        Icon="home_color.png">
        <ShellContent>
            <views:TimelinePage
                x:Name="TimelinePage"/>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem 
        Title="Notifications"
        Icon="notifications_color.png">
        <ShellContent>
            <views:NotificationsPage
                x:Name="NotificationsPage"/>
        </ShellContent>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <views:CurrentUserView
            x:Name="CurrentUser"/>
    </Shell.FlyoutFooter>
</Shell>
