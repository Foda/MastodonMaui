<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MastodonMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MastodonMaui.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="Transparent"
    Shell.NavBarIsVisible="False"
    FlyoutBackgroundColor="Transparent"
    BackgroundColor="Transparent">

    <ShellContent
        Title="Login"
        Route="login">
        <views:BootstrapPage
            x:Name="BootstrapPage"/>
    </ShellContent>

    <TabBar>
        <Tab
            Title="Home"
            Icon="home_color.png">
            <ShellContent
                Title="Home"
                Icon="home_color.png">
                <views:HomePage
                    x:Name="HomePage"/>
            </ShellContent>
        </Tab>

        <Tab
            Title="Notifications"
            Icon="notifications_color.png">
            <ShellContent
                Title="Notifications"
                Icon="notifications_color.png">
                <views:NotificationsPage
                    x:Name="NotificationsPage"/>
            </ShellContent>
        </Tab>
    </TabBar>
</Shell>
